<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundApp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/ola"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:fontFamily="@font/CourgetteRegular"
        android:text="OlÃ¡!"
        android:textColor="@color/amareloApp"
        android:textSize="30pt"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
 />

    <TextView
        android:id="@+id/texto"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:text="@string/fraseInicial1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ola"
        android:layout_marginTop="30dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="480dp"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:text="@string/fraseInicial2"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        app:layout_constraintTop_toBottomOf="@id/texto"
        />

    <TextView
        android:id="@+id/texto3"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/fraseInicial3"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        />

    <TextView
        android:id="@+id/texto4"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/fraseInicial4"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        />

    <Button
        android:id="@+id/buttonAdotar"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:background="@color/amareloApp"
        android:fontFamily="Roboto"
        android:text="@string/adotar"
        android:textColor="@color/corLetraButtons"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto4"
        android:layout_marginTop="28dp"
        />

    <Button
        android:id="@+id/buttonAjudar"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/amareloApp"
        android:fontFamily="Roboto"
        android:text="@string/ajudar"
        android:textColor="@color/corLetraButtons"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAdotar"
        />

    <Button
        android:id="@+id/buttonCadastrarAnimal"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/amareloApp"
        android:fontFamily="Roboto"
        android:text="@string/cadastrarAnimal"
        android:textColor="@color/corLetraButtons"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonAjudar"
        />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:fontFamily="Roboto"
        android:text="@string/login"
        android:textColor="@color/azulApp"
        android:textSize="8pt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonCadastrarAnimal"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="122dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLogin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/logo"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="32dp"
        />


</android.support.constraint.ConstraintLayout>