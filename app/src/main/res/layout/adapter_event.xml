<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/adapter_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:elevation="3dp"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:background="#cfe9e5">
        <TextView
            android:id="@+id/nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:text="Feira de adoção de cães e gatos"
            android:textColor="#434343"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Data"
            android:layout_marginLeft="20dp"
            android:textColor="#589b9b"/>

        <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Domingo 16 de outubro"
            android:layout_marginLeft="20dp"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="5dp"
            android:text="Local"
            android:layout_marginLeft="20dp"
            android:textColor="#589b9b"/>

        <TextView
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Petz - SIA trecho 2, ao lado da Gravia"
            android:layout_marginLeft="20dp"
            android:textColor="#757575"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Informações"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#589b9b"/>

        <TextView
            android:id="@+id/informacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="Venha nos prestigiar e faça sua doação amiga! Toda doação é bem vinda!"
            android:layout_marginLeft="20dp"
            android:textColor="#757575"/>

    </LinearLayout>

</LinearLayout>