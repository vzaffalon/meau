<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundApp">
    <TextView
        android:id="@+id/ops"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:fontFamily="@font/courgette_regular"
        android:text="@string/ops"
        android:textColor="@color/azulApp"
        android:textSize="30pt"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="Você não pode realizar esta ação sem possuir um cadastro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ops"
        android:layout_marginTop="52dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <Button
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@color/azulApp"
        android:id="@+id/registerButton"
        android:text="FAZER CADASTRO"
        android:textSize="8pt"
        android:fontFamily="Roboto"
        android:textColor="@color/corLetraButtons"
        app:layout_constraintTop_toBottomOf="@id/texto1"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="Já possui cadasro?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerButton"
        android:layout_marginTop="44dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <Button
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@color/azulApp"
        android:id="@+id/buttonChat"
        android:text="FAZER LOGIN"
        android:textSize="8pt"
        android:fontFamily="Roboto"
        android:textColor="@color/corLetraButtons"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>