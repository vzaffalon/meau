<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundApp">
    <TextView
        android:id="@+id/ops"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:fontFamily="@font/courgette_regular"
        android:text="@string/ops"
        android:textColor="@color/azulApp"
        android:textSize="30pt"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/texto1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="X ainda não contou nenhuma"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ops"
        android:layout_marginTop="52dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="história para gente!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto1"
        android:layout_marginTop="1dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />


    <TextView
        android:id="@+id/texto3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="Mas você pode olhar as histórias de"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto2"
        android:layout_marginTop="16dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <TextView
        android:id="@+id/texto4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="outros usuários. Temos certeza que"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto3"
        android:layout_marginTop="1dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <TextView
        android:id="@+id/texto5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="Roboto"
        android:textAlignment="center"
        android:text="será muito inspirador!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto4"
        android:layout_marginTop="1dp"
        android:textColor="@color/corLetraTextView"
        android:textSize="9pt"
        />

    <Button
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@color/azulApp"
        android:id="@+id/buttonChat"
        android:text="@string/history_list"
        android:textSize="8pt"
        android:fontFamily="Roboto"
        android:textColor="@color/corLetraButtons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="23dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>